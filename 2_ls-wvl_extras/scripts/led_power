#!/bin/bash

# shell script to control the blue power led

case $1 in
    off)
        echo 1 > /sys/class/gpio/gpio40/value
    ;;
    on)
        echo 0 > /sys/class/gpio/gpio40/value
    ;;
    state)
        VAL="$(cat /sys/class/gpio/gpio40/value)"
        if [ "$VAL" == "1" ]; then
            echo "off"
        elif [ "$VAL" == "0" ]; then
            echo "on"
        fi
    ;;
    *)
        echo "arguments: on, off, or state"
    ;;
esac